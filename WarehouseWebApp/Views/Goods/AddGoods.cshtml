@model AddGoodsModel

@{
ViewData["Title"] = "Добавить новый товар";
}

<div class="container mt-5">
    <h2 class="mb-4">Добавить новый товар</h2>

    <!-- Display Success or Error Message -->
    @if (TempData["ErrorMessage"] != null)
    {
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
    }

    <form asp-action="AddGoods" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        
        <div class="form-group">
            <label for="name" class="control-label">Название товара</label>
            <input type="text" asp-for="name" class="form-control" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="quantity" class="control-label">Количество юнитов на складе</label>
            <input type="number" asp-for="quantity" class="form-control" />
            <span asp-validation-for="quantity" class="text-danger"></span>
        </div>

        <!-- Price Field -->
        <div class="form-group">
            <label for="cost" class="control-label">Цена за юнит</label>
            <input type="number" step="0.01" asp-for="cost" class="form-control" />
            <span asp-validation-for="cost" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="description" class="control-label">Описание</label>
            <input type="text" asp-for="description" class="form-control" />
            <span asp-validation-for="description" class="text-danger"></span>
        </div>
        <br>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Добавить товар</button>
        </div>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
