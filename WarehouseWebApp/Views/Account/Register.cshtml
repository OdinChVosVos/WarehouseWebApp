@model WarehouseWebApp.Models.RegisterModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="text-center mb-4">
                <img src="~/img/logo.png" alt="Логотип" class="img-fluid mb-3" style="max-width: 100px;">
                <h2 class="fw-bold text-primary">Регистрация</h2>
            </div>

            <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" class="shadow-lg p-4 rounded-4 bg-light">
                <!-- Validation Summary -->
                <div class="text-danger mb-3 validation" asp-validation-summary="ModelOnly"></div>

                <!-- Full Name Field -->
                <div class="mb-3">
                    <label asp-for="fullName" class="form-label">Введите ФИО</label>
                    <input type="text" asp-for="fullName" class="form-control form-control-lg" placeholder="Иванов Иван Иванович" />
                    <span asp-validation-for="fullName" class="text-danger"></span>
                </div>

                <!-- Email Field -->
                <div class="mb-3">
                    <label asp-for="email" class="form-label">Введите почту</label>
                    <input type="email" asp-for="email" class="form-control form-control-lg" placeholder="example@mail.com" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>

                <!-- Password Field -->
                <div class="mb-3">
                    <label asp-for="password" class="form-label">Введите пароль</label>
                    <input type="password" asp-for="password" class="form-control form-control-lg" placeholder="••••••••" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>

                <!-- Confirm Password Field -->
                <div class="mb-3">
                    <label asp-for="confirmPassword" class="form-label">Повторите пароль</label>
                    <input type="password" asp-for="confirmPassword" class="form-control form-control-lg" placeholder="••••••••" />
                    <span asp-validation-for="confirmPassword" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-grid mb-3">
                    <input type="submit" value="Зарегистрироваться" class="btn btn-primary btn-lg" />
                </div>

                <!-- Back to Login Link -->
                <div class="text-center">
                    <p class="mb-0 text-muted">Уже есть аккаунт?</p>
                    <a asp-action="Login" asp-controller="Account" class="btn btn-outline-primary">Войти</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Additional Styles for Aesthetic Improvement */
    .shadow-lg {
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
    }

    .rounded-4 {
        border-radius: 15px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-outline-primary {
        border-color: #007bff;
        color: #007bff;
    }

    .btn-outline-primary:hover {
        background-color: #007bff;
        color: white;
    }

    .form-control-lg {
        font-size: 1.2rem;
        padding: 0.75rem;
    }

    .text-muted {
        color: #6c757d !important;
    }
</style>
